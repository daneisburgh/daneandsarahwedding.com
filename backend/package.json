{
    "name": "daneandsarahwedding-backend",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "serverless": "serverless",
        "wait-on": "wait-on",
        "lint": "eslint src/**/*.ts",
        "build": "rm -rf build && tsc && npm run copy-files",
        "watch": "tsc --watch --preserveWatchOutput",
        "copy-files": "cp src/database/data/*.pem build/database/data/ && cp -r src/email/emails build/email/",
        "migrate-and-seed": "cd build/database/data && node index.js",
        "offline": "serverless offline --verbose",
        "serve": "wait-on tcp:localhost:5432 && npm-run-all --sequential build migrate-and-seed && npm-run-all --parallel watch offline",
        "deploy": "npm run migrate-and-seed && serverless prune -n 5 && serverless create_domain && serverless deploy --verbose --force",
        "destroy": "serverless delete_domain && serverless remove --verbose --force",
        "release": "semantic-release --no-ci"
    },
    "release": {
        "branches": [
            "main"
        ]
    },
    "dependencies": {
        "aws-sdk": "^2.874.0",
        "bcryptjs": "^2.4.3",
        "email-templates": "^7.2.0",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.21",
        "node-fetch": "^2.6.1",
        "nodemailer": "^6.5.0",
        "pg": "^8.5.1",
        "pg-hstore": "^2.3.3",
        "pug": "^3.0.3",
        "sequelize": "^5.22.4",
        "serverless-aws-static-file-handler": "^2.0.7",
        "validator": "^13.7.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/bluebird": "^3.5.33",
        "@types/email-templates": "^7.1.0",
        "@types/jsonwebtoken": "^8.5.1",
        "@types/lodash": "^4.14.168",
        "@types/node": "^8.10.66",
        "@types/node-fetch": "^2.5.8",
        "@types/nodemailer": "^6.4.1",
        "@types/tunnel-ssh": "^4.1.0",
        "@types/umzug": "^2.3.0",
        "@types/validator": "^12.0.1",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "eslint": "^6.8.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.3.1",
        "eslint-plugin-standard": "^4.1.0",
        "npm-run-all": "^4.1.5",
        "semantic-release": "^17.4.2",
        "sequelize-cli": "^5.5.1",
        "serverless": "^2.31.0",
        "serverless-domain-manager": "^3.3.1",
        "serverless-offline": "^5.12.1",
        "serverless-prune-plugin": "^1.4.4",
        "tunnel-ssh": "^4.1.4",
        "typescript": "^3.9.9",
        "umzug": "^2.3.0",
        "wait-on": "^4.0.2",
        "xlsx": "^0.17.0"
    }
}
