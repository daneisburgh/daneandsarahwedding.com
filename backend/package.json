{
    "name": "daneandsarahwedding-backend",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "serverless": "serverless",
        "wait-on": "wait-on",
        "lint": "eslint src/**/*.ts",
        "migrate": "npm run build && sequelize-cli db:migrate",
        "copy:emails": "cp -r src/email/emails build/email/",
        "build": "rm -rf build && tsc && npm run copy:emails",
        "watch": "tsc --watch --preserveWatchOutput",
        "offline": "serverless offline --verbose",
        "serve": "wait-on tcp:localhost:5432 && npm run migrate && npm-run-all --parallel watch offline",
        "deploy": "npm run migrate && serverless create_domain && serverless deploy --verbose --force",
        "destroy": "serverless delete_domain && serverless remove --verbose --force"
    },
    "dependencies": {
        "@types/node-fetch": "^2.5.7",
        "bcryptjs": "^2.4.3",
        "email-templates": "^7.0.4",
        "jsonwebtoken": "^8.5.1",
        "lodash": "^4.17.15",
        "nodemailer": "^6.4.6",
        "node-fetch": "^2.6.0",
        "pg": "^8.0.2",
        "pg-hstore": "^2.3.3",
        "pug": "^2.0.4",
        "sequelize": "^5.21.6",
        "sequelize-cli": "^5.5.1",
        "serverless-aws-static-file-handler": "^2.0.5",
        "validator": "^12.2.0"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/bluebird": "^3.5.30",
        "@types/email-templates": "^7.0.1",
        "@types/jsonwebtoken": "^8.3.9",
        "@types/lodash": "^4.14.149",
        "@types/node": "^8.10.60",
        "@types/nodemailer": "^6.4.0",
        "@types/validator": "^12.0.1",
        "@typescript-eslint/eslint-plugin": "^2.29.0",
        "@typescript-eslint/parser": "^2.29.0",
        "eslint": "^6.8.0",
        "eslint-config-standard": "^14.1.1",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "npm-run-all": "^4.1.5",
        "serverless": "^1.67.3",
        "serverless-domain-manager": "^3.3.1",
        "serverless-offline": "^5.12.1",
        "typescript": "^3.8.3",
        "wait-on": "^4.0.2",
        "xlsx": "^0.15.6"
    }
}
